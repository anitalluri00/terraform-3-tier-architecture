pipeline {
    agent any 

    stages {
        stage('checkout') {
            steps {
                git 'https://github.com/anitalluri00/terraform-3-tier-architecture.git'
            }
        }
        stage('init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('validate') {
            steps {
                sh 'terraform validate'                
            }
        }
        stage('plan') {
            steps {
                sh 'terraform plan'
            }
        }
        stage('action') {
            steps {
                sh 'terraform $action --auto-approve'
            }
        }
    }
}
